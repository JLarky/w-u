      h1 {                font-size: 28px;                font-weight: 300;            }            body, table.body, p {                font-size: 14px;                line-height: 19px;            }            p {                margin: 20px 0;            }            a {                color: #5d85c4;                text-decoration: none;            }            a:hover {                color: #5fa5f8 !important;            }            a:active {                color: #5fa5f8 !important;            }            a:visited {                color: #5d85c4 !important;            }
      /*----------------------------------------------------------------------------             * Buttons             *--------------------------------------------------------------------------*/
      a.action-button,            a.action-button:visited,            a.action-button:hover,            a.action-button:active {                color: #fff !important;            }
      /*----------------------------------------------------------------------------             * Outlook First             *--------------------------------------------------------------------------*/
      body.outlook p {                display: inline !important;            }
      /*----------------------------------------------------------------------------             * Media Queries             *--------------------------------------------------------------------------*/
      @media only screen and (max-width: 600px) {
      td.wrapper {                    padding: 15px 5px;                }                table[class="main-content"] img {                    height: auto !important;                    width: auto !important;                }                table[class="body"] center {                    min-width: 0 !important;                }                table[class="body"] .container {
      }                table[class="body"] .row {                    width: 100% !important;                }                table[class="body"] .wrapper {                    display: block !important;                }
      }
