      table.body {                height: 100%;                width: 100%;            }            table.container {                margin: 0;                text-align: inherit;                width: 100%;            }            table.main-content {                background-color: #fff;            }            table.row {                padding: 0px;                position: relative;                width: 100%;            }            td.wrapper {                padding: 20px;                position: relative;            }            table.content {                margin: auto;                width: 94%;            }            table.invoice-statement th {                padding-right: 20px;            }
      /*----------------------------------------------------------------------------             * Alignment Classes             *--------------------------------------------------------------------------*/
      table.center, td.center {                text-align: center;            }            img.center {                float: none;                margin: 0 auto;            }
      /*----------------------------------------------------------------------------             * Typography             *--------------------------------------------------------------------------*/
      body, table.body, h1, h2, h3, h4, h5, h6, p, td {                color: #747474;                font-family: 'Source Sans Pro', sans-serif;                font-weight: normal;                line-height: 1.3;                text-align: left;            }            table.body, h1, h2, h3, h4, h5, h6, p, td {                margin: 0;                padding: 0;            }
